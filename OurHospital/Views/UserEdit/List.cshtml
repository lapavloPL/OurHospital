
@model IEnumerable<OurHospital.Models.ApplicationUser>

@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-md-12">
        <div>
            <h3>@ViewBag.Message</h3>
        </div>
        <div>
            <h2>Worker's list</h2>


            <table class="table">
                <tr>
                    <th>
                        S.No.
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>

                    <th>
                        Pesel Number
                    </th>
                    <th>
                        PWZ Number (only doctors)
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th></th>
                </tr>
                @{ int sno = 1;
                    foreach (var item in Model)
                    {
                                <tr>
                                    <td>
                                        @(sno++)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.PeselNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PWZNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { email = item.Email })" class="btn btn-success" type="button">Edit</a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-success" type="button">Delete</a>
                                    </td>
                                </tr>
                    }
                }
            </table>


        </div>
    </div>

</div>